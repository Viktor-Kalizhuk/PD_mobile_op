<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearNoQuest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/illustrationmain"
    android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заполните анкету, чтобы мы смогли подготовить первые документы для защиты Вас от кредиторов"
        android:textColor="@color/text1"
        android:textSize="16sp"
        android:textFontWeight="400"
        android:fontFamily="@font/roboto_regular"
        android:lineHeight="24dp"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>
        />
    <Button
        android:id="@+id/AddQuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заполнить анкету"
        android:backgroundTint="@color/text1"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:lineHeight="20dp"
        android:textColor="@color/BG1"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="500"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheetdesign"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="23dp"
    tools:context=".More.AntiKolektor.AddBlackListBotomShitFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/drag_handle"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:lineHeight="28dp"
        android:text="Добавить в черный список"
        android:textColor="@color/black_custom"
        android:textFontWeight="500"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carbon_phone_incoming"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/add_log_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineHeight="24dp"
            android:text="Из журнала вызовов"
            android:textColor="@color/black_custom"
            android:textFontWeight="400"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carbon_user_avatar"
            android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto"
        android:lineHeight="24dp"
        android:text="Из контактов"
        android:textColor="@color/black_custom"
        android:textFontWeight="400"
        android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/carbon_edit"
            android:layout_marginRight="16dp"/>
    <TextView
        android:id="@+id/write_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:lineHeight="24dp"
        android:text="Ввести номер"
        android:textColor="@color/black_custom"
        android:textFontWeight="400"
        android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG1"
    tools:context=".Autarization.EntryPaswordFragment">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/carbon_arrow_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="28dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Введите пароль"
            android:textColor="@color/text1"
            android:textFontWeight="500"
            android:textSize="24sp"
            app:lineHeight="32dp" />

        <com.chaos.view.PinView
            android:id="@+id/pinView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:itemBackground="@color/BG1"
            android:textAlignment="center"
            android:textColor="@color/text1"
            android:textIsSelectable="true"
            android:textSize="22sp"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemRadius="8dp"
            app:itemSpacing="8dp"
            app:itemWidth="46dp"
            app:lineColor="@color/text3"
            app:viewType="rectangle" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"

            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/text1"
            android:fontFamily="@font/roboto"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Войти"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/BG2"
            android:fontFamily="@font/roboto"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Не помню пароль"
            android:textAllCaps="false"
            android:textColor="@color/text1"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
